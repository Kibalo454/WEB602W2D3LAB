extends layout
block content
  form.form-registration(action='.' method='POST')
    label(for='name') Name:
    input.form-control(type='text' id='name' name='name' required)
    label(for='email') Email:
    input.form-control(type='email' id='email' name='email' required)
    input.btn.btn-primary.btn-block(type='submit' value='Submit')